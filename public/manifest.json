{
  "manifest_version": 3,
  "name": "ToBeTheBest",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
   {
     "matches": ["http://*/*", "https://*/*"],
     "js": ["content.ts"],
     "css": ["content.css"]
   }
 ],
 "web_accessible_resources": [
   {
      "resources": ["content.html"],
      "matches": ["http://*/*", "https://*/*"]
   }
  ]
}
